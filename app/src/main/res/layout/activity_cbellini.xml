<!-- res/layout/activity_cocktail_detail.xml -->
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón de regreso -->

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recetas de Cocteles"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Imagen del cóctel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:src="@drawable/bellini_cocktail"
                android:scaleType="centerCrop"
                android:contentDescription="Bellini cocktail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bellini"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Sección de Ingredientes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:lineSpacingExtra="8dp"
            android:text="• 2 oz de zumo de durazno o melocotón\n• 2 oz de cava o champán\n• Zumo de arándanos o cereza"
            android:layout_marginBottom="24dp"/>

        <!-- Sección de Preparación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparación"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:lineSpacingExtra="8dp"
            android:text="Prepara el zumo licuando los duraznos o melocotones. Puedes agregar hielo mientras licuas. Este cócktail se sirve en una copa de cava. Agrega la mitad de el cava. Cuidadosamente, mezcla con una cucharita larga sin revolver demasiado.\n\nPara darle el tono rosado que tradicionalmente lleva, agrega zumo de arándanos o de cereza. También puedes utilizar un cava rosado."/>

    </LinearLayout>
</ScrollView>