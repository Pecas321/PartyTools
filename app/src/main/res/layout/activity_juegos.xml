<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/usuario_juegos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usuario3" />

    <TextView
        android:id="@+id/Juegodemesa"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hola Cabito Â¡Diviertete con nuestros juegos!"
        android:textAlignment="center"
        android:textColor="#FF00FF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario_juegos" />

    <Button
        android:id="@+id/button_Recetas"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Juegos de mesa"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Juegodemesa" />

    <TextView
        android:id="@+id/texto_juegosmesa"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:text="Revisa si tienes alguno de estos increibles juegos!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/button_Recetas"
        app:layout_constraintStart_toStartOf="@id/button_Recetas"
        app:layout_constraintTop_toBottomOf="@id/button_Recetas" />

    <Button
        android:id="@+id/button_sinalcohol"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#9C27B0"
        android:text="Juegos con Alcohol"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_juegosmesa" />

    <TextView
        android:id="@+id/texto_juegosalcohol"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:text="Aburridos? Descubre juegos para animar fiestas con tus amigos."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/button_sinalcohol"
        app:layout_constraintStart_toStartOf="@id/button_sinalcohol"
        app:layout_constraintTop_toBottomOf="@id/button_sinalcohol" />

    <Button
        android:id="@+id/Descubre_juegos"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FFC107"
        android:text="Descubre juegos"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_juegosalcohol" />

    <TextView
        android:id="@+id/texto_descubrejuegos"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:text="Cansados de lo mismo siempre? Juega estos juegos que casi nadie conoce."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/Descubre_juegos"
        app:layout_constraintStart_toStartOf="@id/Descubre_juegos"
        app:layout_constraintTop_toBottomOf="@id/Descubre_juegos" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icono_fiesta_juegos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/pngtreegift_party_decoration_white_balloons_5790391" />

    <ImageView
        android:id="@+id/icono_alcohol_juegos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/icono_fiesta_juegos"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/icono_cerveza2" />

    <ImageView
        android:id="@+id/icono_juegos_juegos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/icono_alcohol_juegos"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/icono_dado3" />

    <ImageView
        android:id="@+id/icono_cocteles_juegos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/icono_juegos_juegos"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/icono_coctel2" />

    <TextView
        android:id="@+id/textofiestajuegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiesta"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/icono_fiesta_juegos"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/icono_fiesta_juegos"
        app:layout_constraintTop_toBottomOf="@+id/icono_fiesta_juegos" />

    <TextView
        android:id="@+id/textoalcoholjuegos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Alcohol"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/icono_alcohol_juegos"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@+id/icono_alcohol_juegos"
        app:layout_constraintTop_toBottomOf="@+id/icono_alcohol_juegos" />

    <TextView
        android:id="@+id/textojuegojuwgos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juegos"
        android:textColor="#FBFBFB"
        app:layout_constraintEnd_toEndOf="@+id/icono_juegos_juegos"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="@+id/icono_juegos_juegos"
        app:layout_constraintTop_toBottomOf="@+id/icono_juegos_juegos" />

    <TextView
        android:id="@+id/textojuegoscocteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cocteles"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/icono_cocteles_juegos"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="@+id/icono_cocteles_juegos"
        app:layout_constraintTop_toBottomOf="@+id/icono_cocteles_juegos" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="bottom|center"
        android:text="."
        android:textColor="#FFFDFD"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/icono_juegos_juegos"
        app:layout_constraintEnd_toEndOf="@+id/icono_juegos_juegos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/icono_juegos_juegos"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

</androidx.constraintlayout.widget.ConstraintLayout>