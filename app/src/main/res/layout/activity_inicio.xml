<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondo_party_tools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Título "PARTY TOOLS" centrado en la parte superior -->
    <TextView
        android:id="@+id/textViewPartyTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARTY TOOLS"
        android:textColor="#FF00F5"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Subtítulo "BIENVENIDO" centrado debajo del título -->
    <TextView
        android:id="@+id/textViewBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textColor="#FF00F5"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewPartyTools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Texto "Cabito" centrado debajo de BIENVENIDO -->
    <TextView
        android:id="@+id/textViewCabito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabito"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewBienvenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Botón "Juegos" alineado a la izquierda -->
    <Button
        android:id="@+id/buttonJuegos"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:backgroundTint="#32CD32"
        android:text="Juegos"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCabito"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp" />

    <!-- Botón "Cocteles" alineado a la derecha -->
    <Button
        android:id="@+id/buttonCocteles"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:backgroundTint="#32CD32"
        android:text="Cocteles"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCabito"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp" />

    <!-- Botón "Fiestas" centrado debajo de Juegos y Cocteles -->
    <Button
        android:id="@+id/buttonFiestas"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:backgroundTint="#A93BFF"
        android:text="Fiestas"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/buttonJuegos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Botón "Alcohol Seguro" centrado debajo de Fiestas -->
    <Button
        android:id="@+id/buttonAlcohol"
        android:layout_width="260dp"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#A93BFF"
        android:text="Alcohol"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonFiestas" />

</androidx.constraintlayout.widget.ConstraintLayout>
