<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/usuario_cocteles"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/usuario3" />

    <TextView
        android:id="@+id/Juegodemesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¡Hola Cabito! ¡Descubre deliciosos cocteles!"
        android:textAlignment="center"
        android:textColor="#FF00FF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario_cocteles" />


    <Button
        android:id="@+id/button_Recetas"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Receta de Cocteles"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Juegodemesa" />

    <TextView
        android:id="@+id/texto_juegosmesa"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:text="Descubre como preparar tus cocteles favoritos"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/button_Recetas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/button_Recetas"
        app:layout_constraintTop_toBottomOf="@id/button_Recetas" />

    <Button
        android:id="@+id/button_sinalcohol"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#9C27B0"
        android:text="Cocteles sin Alcohol"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_juegosmesa" />

    <TextView
        android:id="@+id/texto_juegosalcohol"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:text="Opciones refrescantes para todos los gustos."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/button_sinalcohol"
        app:layout_constraintStart_toStartOf="@id/button_sinalcohol"
        app:layout_constraintTop_toBottomOf="@id/button_sinalcohol" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/icono_fiesta_cocteles"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/pngtreegift_party_decoration_white_balloons_5790391" />

    <ImageView
        android:id="@+id/icono_alcohol_cocteles"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/icono_fiesta_cocteles"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/icono_cerveza2" />

    <ImageView
        android:id="@+id/icono_juegos_cocteles"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@+id/icono_alcohol_cocteles"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/icono_dado3" />

    <ImageView
        android:id="@+id/icono_cocteles_cocteles"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/icono_juegos_cocteles"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:srcCompat="@drawable/icono_coctel2" />

    <TextView
        android:id="@+id/textofiestacoctelese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Fiesta"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/icono_fiesta_cocteles"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/icono_fiesta_cocteles"
        app:layout_constraintTop_toBottomOf="@+id/icono_fiesta_cocteles" />

    <TextView
        android:id="@+id/textoalcoholcocteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="Alcohol"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/icono_alcohol_cocteles"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@+id/icono_alcohol_cocteles"
        app:layout_constraintTop_toBottomOf="@+id/icono_alcohol_cocteles" />

    <TextView
        android:id="@+id/textojuegoscocteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Juegos"
        android:textColor="#FBFBFB"
        app:layout_constraintEnd_toEndOf="@+id/icono_juegos_cocteles"
        app:layout_constraintStart_toStartOf="@+id/icono_juegos_cocteles"
        app:layout_constraintTop_toBottomOf="@+id/icono_juegos_cocteles" />

    <TextView
        android:id="@+id/textococtelescocteles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Cocteles"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/icono_cocteles_cocteles"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="@+id/icono_cocteles_cocteles"
        app:layout_constraintTop_toBottomOf="@+id/icono_cocteles_cocteles" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="bottom|center"
        android:text="."
        android:textColor="#FFFFFF"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/icono_cocteles_cocteles"
        app:layout_constraintEnd_toEndOf="@+id/icono_cocteles_cocteles"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="@+id/icono_cocteles_cocteles"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        app:layout_constraintVertical_bias="0.461" />

</androidx.constraintlayout.widget.ConstraintLayout>