<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/Juegosdescubre"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="Descubre Juegos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto adicional  -->
    <TextView
        android:id="@+id/text_informacion_descubre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Haz clic en el más para agregar un nuevo juego!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/Juegosdescubre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón Volver -->
    <ImageView
        android:id="@+id/Volver_jdescubre"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/Juegosdescubre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icono_volver" />

    <!-- Icono para agregar juego -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewJuegosDescubre"
        android:layout_width="384dp"
        android:layout_height="518dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_informacion_descubre" />

    <ImageView
        android:id="@+id/agregar_juego"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Volver_jdescubre"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mas" />


</androidx.constraintlayout.widget.ConstraintLayout>
