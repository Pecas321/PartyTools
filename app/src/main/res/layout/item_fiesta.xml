<!-- item_fiesta.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#A93BFF"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivImagenLugar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@color/black" />


    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#A93BFF"
        android:backgroundTint="#A93BFF"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvNombreLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Lugar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDireccionLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnComoLlegar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#B41EBC"
            android:text="Cómo llegar"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
