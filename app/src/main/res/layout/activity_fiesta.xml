<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#090909"
    android:paddingTop="?attr/actionBarSize"
    tools:background="#040404">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="336dp"
        android:layout_height="159dp"
        android:gravity="center"
        android:text="Bienvenido a la fiesta Cabito"
        android:textColor="#FF00F5"
        android:textSize="49sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_fiestasCerca"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="76dp"
        android:backgroundTint="#32CD32"
        android:text="Fiestas cerca"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button_ComReuniones"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#A93BFF"
        android:text="Comunidad de reuniones"
        android:textColor="#050505"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="269dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Encuentra las fiestas mas cercanas a ti"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fiestasCerca" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="292dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Sin ideas?                                                                    â€¨Encuentra inspiracion aqui para tus reuniones"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ComReuniones" />

</androidx.constraintlayout.widget.ConstraintLayout>